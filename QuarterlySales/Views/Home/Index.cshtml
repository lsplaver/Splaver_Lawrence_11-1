@model QuarterlySalesViewModel

@{ 
    ViewBag.Title = "Quarterly Sales";
}

<div class="container">
    <div class="row">
        <h2>Quarterly Sales</h2>
    </div>
    <div class="row">
        <form asp-action="Filter" method="post">
            <div class="form-group">
                <label asp-for="Empid">Employee</label>
                <select asp-for="Empid" class="form-control" asp-items="@(new SelectList(Model.Employees, "EmployeeId", "Name"))">
                    <option value=""></option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
    <div class="row">
        <table class="table table-borderless mt-2">
            <thead>
                <tr>
                    <td>Year</td>
                    <td>Quarter</td>
                    <td>Employee</td>
                    <td>Amount</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Sale sale in Model.Sales)
            {
                <tr>
                    <td>@sale.Year</td>
                    <td>@sale.Quarter</td>
                    <td>@(sale.Employee.FirstName + " " + sale.Employee.LastName)</td>
                    <td>@sale.Amount.ToString("C2")</td>
                </tr>
            }
                <tr>
                    <td>Total Sales</td>
                    <td></td>
                    <td></td>
                    <td>@Model.TotalSales.ToString("C2")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>