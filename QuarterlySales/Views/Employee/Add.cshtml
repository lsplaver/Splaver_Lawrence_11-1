@model QuarterlySalesViewModel
@{
    ViewBag.Title = "Add Employee";
    //ViewBag.EmployeeId = Model.CurrentEmployee.EmployeeId;
}

@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="container">
    <div class="row">
        <h2>Add Employee</h2>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <form asp-action="Add" method="post">
            <div class="form-group row">
                <label class="col-4" asp-for="CurrentEmployee.FirstName"></label>
                <div class="col-auto">
                    <input asp-for="CurrentEmployee.FirstName" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="CurrentEmployee.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-4" asp-for="CurrentEmployee.LastName"></label>
                <div class="col-auto">
                    <input asp-for="CurrentEmployee.LastName" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="CurrentEmployee.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-4" asp-for="CurrentEmployee.DateOfBirth"></label>
                <div class="col-auto">
                    <input asp-for="CurrentEmployee.DateOfBirth" type="text" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="CurrentEmployee.DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-4" asp-for="CurrentEmployee.DateOfHire"></label>
                <div class="col-auto">
                    <input asp-for="CurrentEmployee.DateOfHire" type="text" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="CurrentEmployee.DateOfHire" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-4" asp-for="CurrentEmployee.ManagerId"></label>
                <div class="col-auto">
                    <select asp-for="CurrentEmployee.ManagerId" class="form-control" asp-items="@(new SelectList(Model.Employees, "EmployeeId", "EmployeeName"))">
                        <option value=""></option>
                    </select>
                </div>
                <div class="col-auto">
                    <span asp-validation-for="CurrentEmployee.ManagerId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary">Add</button>
                <a asp-action="Cancel" class="btn btn-outline-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>